<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ajustes"
    tools:context=".AjustesActivity">

    <ListView
        android:id="@+id/ListView1"
        android:layout_width="318dp"
        android:layout_height="126dp"
        android:layout_marginTop="36dp"
        android:background="#9A9CEA"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/buttonSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.43"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHorario"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttonHorario"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/buttonselector"
        android:onClick="editar"
        android:text="@string/editar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHorario3" />

    <Button
        android:id="@+id/buttonHorario2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/buttonselector"
        android:onClick="editarCuerpo"
        android:text="@string/cambiar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonHorario3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/buttonselector"
        android:onClick="editarMeta"
        android:text="@string/cambiar"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHorario2" />

    <TextView
        android:id="@+id/textViewMetaUsuario"
        android:layout_width="213dp"
        android:layout_height="68dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="60dp"
        android:text="TextView"
        android:textColor="@color/texto"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonHorario3"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewCuerpoUsuario" />

    <TextView
        android:id="@+id/textViewHorario"
        android:layout_width="199dp"
        android:layout_height="78dp"
        android:layout_marginStart="34dp"
        android:layout_marginBottom="16dp"
        android:text="Mi Horario:"
        android:textColor="@color/texto"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/ListView1"
        app:layout_constraintEnd_toStartOf="@+id/buttonHorario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewCuerpoUsuario"
        android:layout_width="214dp"
        android:layout_height="51dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="92dp"
        android:text="TextView"
        android:textColor="@color/texto"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/buttonHorario2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/buttonselector"
        android:text="@string/guardar_y_salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>