<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/instructions"
    tools:context=".TutorialActivity">
    
    <com.denzcoskun.imageslider.ImageSlider
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        app:iss_auto_cycle="true"
        android:layout_marginTop="40dp"
        app:iss_period="1000"
        app:iss_placeholder="@drawable/logo_softcare"
        app:iss_error_image="@drawable/logo_softcare"
        app:iss_delay="0"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="145dp"
        android:layout_height="99dp"
        android:layout_alignTop="@id/btnmat"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="31dp"
        android:background="#00A3DCEF"
        android:backgroundTint="#A3DCEF"
        android:onClick="verGif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnmat"
        android:layout_width="146dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btnCompletar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-141dp"
        android:background="#00A3DCEF"
        android:backgroundTint="#00A3DCEF"
        android:onClick="verMaterial"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtnEj"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custombutton"
        android:text="@string/back"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCompletar"

        android:layout_width="228dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="105dp"
        android:layout_marginRight="78dp"
        android:layout_marginBottom="19dp"
        android:background="@drawable/custombutton"
        android:layoutDirection="locale"
        android:text="COMPLETAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBtnEj" />


</RelativeLayout>