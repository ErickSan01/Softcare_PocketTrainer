<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    tools:context=".TutorialActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="203dp"
        android:layout_height="198dp"
        android:layout_marginTop="151dp"
        android:background="#A3DCEF"
        android:backgroundTint="#A3DCEF"
        android:src="@drawable/logo_softcare"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/logo_softcare" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="10dip"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_marginBottom="-50dip"
        android:text="@string/realizar_4_series_de_15_repeticiones_con_descanso_de_30_segundos_al_terminar_una_serie"
        android:textColor="@color/texto" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="-180dp"
        android:layout_marginTop="-80dip"
        android:background="@drawable/custombutton"
        android:backgroundTint="#A3DCEF"
        android:onClick="verImagen"
        android:text="Ver imÃ¡genes"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/btnmat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/button5"
        android:layout_width="153dp"
        android:layout_height="50dp"
        android:layout_marginTop="-80dip"
        android:layout_marginEnd="28dp"
        android:background="@drawable/custombutton"
        android:backgroundTint="#A3DCEF"
        android:onClick="verGif"
        android:text="Ver Gif"
        android:layout_alignTop="@id/btnmat"
        android:layout_alignParentRight="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:background="#A2B9ED"
        android:text="Tutorial de Ejercicio"
        android:textColor="#FCFFFFFF"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnmat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="-60dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btnCompletar"
        android:background="@drawable/custombutton"
        android:backgroundTint="#A3DCEF"
        android:onClick="verMaterial"
        android:text="Material Requerido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtnEj"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custombutton"
        android:text="@string/back"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCompletar"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="16dp"
        android:text="Completar"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBtnEj" />


</RelativeLayout>