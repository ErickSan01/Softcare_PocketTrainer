<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tutorialejer"
    tools:context=".TutorialActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="294dp"
        android:layout_height="219dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:background="#A3DCEF"
        android:backgroundTint="#A3DCEF"
        android:layoutDirection="inherit"
        android:src="@drawable/logo_softcare"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/logo_softcare" />

    <Button
        android:id="@+id/button5"
        android:layout_width="145dp"
        android:layout_height="99dp"
        android:layout_alignTop="@id/btnmat"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="31dp"
        android:background="#00A3DCEF"
        android:backgroundTint="#A3DCEF"
        android:onClick="verGif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btnmat"
        android:layout_width="146dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/btnCompletar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="-141dp"
        android:background="#00A3DCEF"
        android:backgroundTint="#00A3DCEF"
        android:onClick="verMaterial"
        android:text=" "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/backBtnEj"
        android:layout_width="54dp"
        android:layout_height="49dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custombutton"
        android:text="@string/back"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCompletar"

        android:layout_width="228dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="94dp"
        android:layout_marginRight="112dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/custombutton"
        android:layoutDirection="locale"
        android:text="COMPLETAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backBtnEj" />


</RelativeLayout>