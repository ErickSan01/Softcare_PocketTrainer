<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2124"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnNivel"
        android:layout_width="114dp"
        android:layout_height="186dp"
        android:layout_marginStart="44dp"
        android:layout_marginBottom="185dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAjustes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnRutinas"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnRutinas"
        android:layout_width="113dp"
        android:layout_height="186dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="112dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/btnAgenda"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAjustes"
        android:layout_width="115dp"
        android:layout_height="186dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="185dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAgenda"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnAgenda"
        android:layout_width="114dp"
        android:layout_height="184dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="44dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>