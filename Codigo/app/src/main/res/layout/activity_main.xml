<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2124"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/backgrnd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_main" />

    <Button
        android:id="@+id/btnNivel"
        android:layout_width="171dp"
        android:layout_height="59dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1"
        android:background="@drawable/custombutton"
        android:text="Nivel de entrenamiento"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnAjustes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnRutinas"
        android:layout_width="185dp"
        android:layout_height="58dp"
        android:layout_marginStart="112dp"
        android:layout_marginEnd="114dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:background="@drawable/custombutton"
        android:text="MI RUTINA"
        app:layout_constraintBottom_toTopOf="@+id/btnNivel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnAjustes"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:background="@drawable/custombutton"
        android:text="Ajustes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>