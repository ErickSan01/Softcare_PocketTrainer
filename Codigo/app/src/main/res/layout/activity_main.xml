<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2124"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnNivel"
        android:layout_width="102dp"
        android:layout_height="165dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonHistorial" />

    <Button
        android:id="@+id/btnRutinas"
        android:layout_width="115dp"
        android:layout_height="174dp"
        android:layout_marginTop="277dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/imageView5"
        app:layout_constraintStart_toStartOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAjustes"
        android:layout_width="103dp"
        android:layout_height="161dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPrueba" />

    <Button
        android:id="@+id/buttonPrueba"
        android:layout_width="98dp"
        android:layout_height="155dp"
        android:layout_marginTop="167dp"
        android:layout_marginEnd="24dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonHistorial"
        android:layout_width="92dp"
        android:layout_height="160dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="168dp"
        android:layout_weight="1"
        android:background="#00FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>